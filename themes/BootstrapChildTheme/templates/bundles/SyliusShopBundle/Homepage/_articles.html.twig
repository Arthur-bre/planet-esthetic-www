    <div class="articles d-flex flex-column flex-md-row gap-5">
        {% for article in articles %}
            <article class="article-item d-flex flex-column mb-5">
                {% if article.images|length > 0 %}
                    {% set path = article.images[0].path %}
                {% else %}
                    {# TODO set default image #}
                    {% set path = asset('bootstrap-theme/images/planet-esthetic-logo.png', 'bootstrapTheme') %}
                {% endif %}
                <a class="article-image-container mb-4 mb-lg-0 " href="{{ path('odiseo_sylius_blog_plugin_shop_article_show', {'slug' : article.slug}) }}">
                    <div class="article-image w-100 h-100" style="background-image:url({{ path|imagine_filter(filter|default('sylius_large')) }}) " data-background="{{ path|imagine_filter(filter|default('sylius_large')) }}"></div>
                </a>
                <div class="article-content px-0  px-md-5 d-flex flex-column justify-content-center text-center">
                    <h2>{{ article.title }}</h2>
                    <div class="article-description">
                        <p>{{ (article.content|raw|striptags)|raw|length > 180 ? ((article.content|raw)|striptags)|raw|u.truncate(180, '...', false) : article.content|raw|striptags }}</p>
                    </div>
                    <a class="ui button green align-self-start m-auto" href="{{ path('odiseo_sylius_blog_plugin_shop_article_show', {'slug' : article.slug}) }}">
                        {{ 'app.ui.read_more'|trans }}
                    </a>
                </div>
            </article>
        {% endfor %}
    </div>


